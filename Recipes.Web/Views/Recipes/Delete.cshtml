@model Recipes.Common.Users.BindingModels.RecipeDeletionBindingModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Are you sure you want to delete @Model.Title ?</h2>

<form asp-controller="Recipes" asp-action="Delete" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="/Users/Recipes" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

