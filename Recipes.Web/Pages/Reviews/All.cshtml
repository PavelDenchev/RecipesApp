@page "{id}"
@model Recipes.Web.Pages.Reviews.AllModel
@{
    ViewData["Title"] = "All";
}

@{
    if (Model.Reviews.Count() == 0)
    {
        <h2>There are no reviews for @Model.RecipeTitle yet.</h2>
    }
    else
    {
        <h2>Reviews for @Model.RecipeTitle</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Review by</th>
                </tr>
            </thead>
            <tbody>
                @Html.DisplayForModel()
            </tbody>
        </table>
    }
}