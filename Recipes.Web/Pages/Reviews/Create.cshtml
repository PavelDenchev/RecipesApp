@page "{id}"
@model Recipes.Web.Pages.Reviews.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create review for @Model.Title</h2>

<form asp-page="/Reviews/Create" asp-route-id="@Model.RecipeId" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="ReviewContent" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <textarea asp-for="ReviewContent" class="form-control" rows="6" placeholder="Please write your review here."></textarea>
            <span class="field-validation-valid text-danger" data-valmsg-for="ReviewContent" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}