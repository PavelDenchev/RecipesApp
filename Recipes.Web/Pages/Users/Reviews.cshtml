@page
@model Recipes.Web.Pages.Users.ReviewsModel
@{
    ViewData["Title"] = "Reviews";
}

<h2>My Reviews</h2>

@{
    if (Model.Reviews.Count() == 0)
    {
        <h4>You do not have any reviews yet.</h4>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Review for</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @Html.DisplayForModel()
            </tbody>
        </table>
    }
}