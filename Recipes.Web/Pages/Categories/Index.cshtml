@page
@model Recipes.Web.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Select the category you wish to search for.</h2>

<form asp-page="/Categories/Index" method="post" class="form-horizontal">
    <div class="form-group row">
        <label asp-for="CategoryId" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="form-control" asp-items="@Model.Categories"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Search" class="btn btn-success" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>